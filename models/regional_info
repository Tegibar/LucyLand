 regional_number = models.PositiveSmallIntegerField()
    name = models.CharField(max_length=200)
    population_size = models.PositiveBigIntegerField()
    area_in_square_kilometer = models.PositiveBigIntegerField()
    capital_city = models.CharField(max_length=200)
    flag=models.ImageField(upload_to='flag')
    email_address=models.EmailField()
    map=models.ImageField(upload_to'map')
    website=models.URLField()
    gps = models.CharField(max_length=100)  # Assuming GPS coordinates will be stored as a string
    description = models.TextField()  # A brief description of the region.
    main_attractions = models.TextField()  #Key attractions in the region.
    best_time_to_visit = models.CharField(max_length=200)   # Information on the best time to visit the region.
    local_cuisine = models.TextField()   # Information about the local food and cuisine.
    transportation = models.TextField()  # Details on how to get to and around the region.
    accommodations = models.TextField()  # Information about available accommodations.
    language_spoken = models.CharField(max_length=200)  # Languages commonly spoken in the region.
    currency = models.CharField(max_length=50)  # Local currency used in the region.
    climate = models.TextField()   # Information about the climate and weather conditions.
    festivals = models.TextField() # Major festivals or cultural events celebrated in the region.
    history = models.TextField()  # Historical background or significant events related to the region.
    activities = models.TextField()  # Outdoor or recreational activities available in the region.
    local_customs = models.TextField() # Cultural customs or etiquette important for visitors to know.
    emergency_contacts = models.TextField() # Important contact numbers for emergencies (e.g., police, hospital).
